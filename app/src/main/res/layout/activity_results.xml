<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultsActivity">

    <TextView
        android:id="@+id/calc_summary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcSummaryTxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/calculations_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calc_summary_txt"
        tools:context=".ResultsActivity">

        <TableRow>

            <TextView
                android:text="@string/tableCategoryTxt"
                android:textStyle="bold" />

            <TextView
                android:text="@string/tableTermTxt"
                android:textStyle="bold" />

            <TextView
                android:text="@string/tableAmortP"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/tableNumOfPaymentsTxt" />

            <TextView android:id="@+id/num_pay_term" />

            <TextView android:id="@+id/num_pay_period" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/tableMortgagePaymentTxt" />

            <TextView android:id="@+id/monthly_payment_term" />

            <TextView android:id="@+id/monthly_payment_period" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/tablePrepaymentTxt" />

            <TextView android:id="@+id/prepay_term" />

            <TextView android:id="@+id/prepay_period" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/tablePrinciplePaymentsTxt" />

            <TextView android:id="@+id/principle_payments_term" />

            <TextView android:id="@+id/principle_payments_period" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/tableInterestPaymentsTxt" />

            <TextView android:id="@+id/interest_payments_term" />

            <TextView android:id="@+id/interest_payments_period" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/tableTotalCostTxt" />

            <TextView android:id="@+id/total_term" />

            <TextView android:id="@+id/total_period" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/mortgage_summary_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/summaryMortgageTxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculations_table_layout" />

    <TextView
        android:id="@+id/mortgage_summary_txt0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt" />

    <TextView
        android:id="@+id/mortgage_summary_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt0" />

    <TextView
        android:id="@+id/mortgage_summary_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt1" />

    <TextView
        android:id="@+id/mortgage_summary_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt2" />

    <TextView
        android:id="@+id/mortgage_summary_txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt3" />

    <TextView
        android:id="@+id/mortgage_summary_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt4" />

    <TextView
        android:id="@+id/textView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/summaryPaymentDiagTxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mortgage_summary_txt5" />

    <TextView
        android:id="@+id/textView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[GRAPHS]"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView61" />

    <Button
        android:id="@+id/summary_report_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/summaryReportBtnTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView63" />

    <TextView
        android:id="@+id/textView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/summaryReportDescTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView62" />

</androidx.constraintlayout.widget.ConstraintLayout>